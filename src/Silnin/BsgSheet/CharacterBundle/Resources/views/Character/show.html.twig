{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Character</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{{ entity.createDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Homeworld</th>
                <td>{{ entity.homeworld }}</td>
            </tr>
            <tr>
                <th>Callsign</th>
                <td>{{ entity.callsign }}</td>
            </tr>
            <tr>
                <th>Plotpoints</th>
                <td>{{ entity.plotPoints }}</td>
            </tr>
            <tr>
                <th>Advancementpoints</th>
                <td>{{ entity.advancementPoints }}</td>
            </tr>
            <tr>
                <th>Woundrating</th>
                <td>{{ entity.woundRating }}</td>
            </tr>
            <tr>
                <th>Stunrating</th>
                <td>{{ entity.stunRating }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('character') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('character_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
