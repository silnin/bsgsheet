{% block head %}
    {#<link rel="icon" sizes="16x16" href="{{ asset('bundles/silninuser/images/cylon.ico') }}" />#}
    {#<link rel="stylesheet" href="{{ asset('bundles/silninuser/css/style.css') }}" />#}
{% endblock %}
{#{% block title 'Battlestar Galactica Sheet' %}#}

{% block body -%}
    <div id="menu">
        {{ render(controller(
            'DashboardBundle:Menu:dashboardMenu',
            {}
        )) }}
    </div>

    <h1>Character list</h1>

    <table class="records_list">
        <thead>
        <tr>
            {#<th>Id</th>#}
            <th>Name</th>
            <th>Createdate</th>
            <th>Callsign</th>
            <th>AP</th>
            <th>Attributes</th>
            <th>Actions</th>

            {#<th>Description</th>#}
            {#<th>Homeworld</th>#}
            {#<th>Plotpoints</th>#}

            {#<th>Woundrating</th>#}
            {#<th>Stunrating</th>#}

        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {#<td><a href="{{ path('character_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                <td>{{ entity.name }}</td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                {#<td>{{ entity.description }}</td>#}
                {#<td>{{ entity.homeworld }}</td>#}
                <td>{{ entity.getRank.getName }} {{ entity.callsign }}</td>
                {#<td>{{ entity.plotPoints }}</td>#}
                <td>{{ entity.advancementPoints }}</td>
                {#<td>{{ entity.woundRating }}</td>#}
                {#<td>{{ entity.stunRating }}</td>#}
                <td>
                    <table>
                        {% for attribute in entity.getAttributes %}
                            <tr>
                                <td>{{ attribute.getType }}</td>
                                <td>
                                {{ render(controller(
                                        'CharacterBundle:Die:translateDie',
                                        { 'step': attribute.getStep }
                                        )) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('character_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('character_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('character_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}